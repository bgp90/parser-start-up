<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-edit-box">
        <h2>Editar Usuário</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.input :email,
                        # hint: "deixe em branco caso não queira modificar",
                        required: false,
                        as: (params[:address] == 'true' || params[:car_info] == 'true' || params[:angels] == 'true' ? :hidden : :string) %>
            <%= f.input :first_name,
                        label: "Nome",
                        # hint: "deixe em branco caso não queira modificar",
                        required: false,
                        as: (params[:address] == 'true' || params[:car_info] == 'true' || params[:angels] == 'true' ? :hidden : :string) %>
            <%= f.input :last_name,
                        label: "Sobrenome",
                        # hint: "deixe em branco caso não queira modificar",
                        required: false,
                        as: (params[:address] == 'true' || params[:car_info] == 'true' || params[:angels] == 'true' ? :hidden : :string) %>
            <%= f.input :address,
                        label: "Endereço",
                        # hint: "deixe em branco caso não queira modificar",
                        required: false,
                        as: (params[:info_geral] == 'true' || params[:car_info] == 'true' || params[:angels] == 'true' ? :hidden : :string) %>
            <%= f.input :phone_number,
                        label: "Telefone",
                        # hint: "deixe em branco caso não queira modificar",
                        required: false,
                        as: (params[:address] == 'true' || params[:car_info] == 'true' || params[:angels] == 'true' ? :hidden : :string) %>
            <%= f.input :car_model,
                        label: "Modelo do Carro",
                        # hint: "deixe em branco caso não queira modificar",
                        required: false,
                        as: (params[:address] == 'true' || params[:info_geral] == 'true' || params[:angels] == 'true' ? :hidden : :string) %>
            <%= f.input :car_plate,
                        label: "Placa do Carro",
                        # hint: "deixe em branco caso não queira modificar",
                        required: false,
                        as: (params[:address] == 'true' || params[:info_geral] == 'true' || params[:angels] == 'true' ? :hidden : :string) %>
            <%= f.input :password,
                        label: "Senha",
                        # hint: "deixe em branco caso não queira modificar",
                        required: false,
                        as: (params[:address] == 'true' || params[:car_info] == 'true' || params[:angels] == 'true' ? :hidden : :password),
                        input_html: { autocomplete: "new-password" } %>

            <%= f.input :password_confirmation,
                        label: "Confirmação de Senha",
                        required: false,
                        as: (params[:address] == 'true' || params[:car_info] == 'true' || params[:angels] == 'true' ? :hidden : :password),
                        input_html: { autocomplete: "new-password" } %>

            <%= f.input :current_password,
                        label: "Senha Atual",
                        hint: "Precisamos da senha atual para atualizar suas modificações",
                        required: true,
                        as: (params[:address] == 'true' || params[:car_info] == 'true' || params[:angels] == 'true' ? :hidden : :password),
                        input_html: { autocomplete: "current-password" } %>

          </div>

      <div class="form-actions">
        <%= f.button :submit, "Atualizar", class: "btn btn-primary"%>
      </div>
    <% end %>
    <!-- <h3>Cancelar minha conta</h3> -->
    <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %></p>

  <%= link_to "Voltar", :back %>
      </div>
    </div>
  </div>
</div>


