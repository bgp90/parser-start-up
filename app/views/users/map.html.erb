<div class="container">
  <div class="box">
    <div class="row">

        <div class="bio-header" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.8)), url('/assets/direcao_diurna.jpg');background-size: cover;background-position: center center;">
            <img class="avatar-large" src="/assets/Diego.jpeg">
             <h3> <%= current_user.first_name %> <%= current_user.last_name %></h3>
             <p>Motorista</p>
        </div>
      </div>

      <div class="row">

        <div class="col-xs-12 col-sm-6">
          <div class="carinfo">
            <p><strong>Placa</strong></p>
            <p><%= current_user.car_plate %></p>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6">
          <div class="carinfo">
            <p><strong>Modelo</strong></p>
            <p><%= current_user.car_model %></p>
          </div>
        </div>

    </div>

    <div class="row">
      <div class="panel panel-default">
        <div class="panel-body">
      <div class="current-address">
        <i class="fas fa-exclamation-triangle"></i>
        <p><blink>carro em perigo</p></blink>
        <p id="location"></p>

      </div>
    </div>
    </div>
    </div>

    <div class="row">
      <div class="mapview">
      <%= render 'shared/map' %>
      </div>
    </div>
  </div>
</div>






